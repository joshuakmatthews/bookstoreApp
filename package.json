{
  "name": "BookstoreApp",
  "version": "1.0.0",
  "description": "Bookstore App",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap-cloud-sdk/http-client": "^3.1.1",
    "@sap-cloud-sdk/util": "^3.1.1",
    "@sap/cds": "^6",
    "@sap/low-code-event-handler": "^1.2.1",
    "@sap/mdk-tools": "^1.3.1",
    "@sap/xsenv": ">=3.3.2 <3.3.3",
    "@sap/xssec": "^3.2.17",
    "express": "^4",
    "hdb": "^0.19.5",
    "passport": "^0.6.0"
  },
  "devDependencies": {
    "@sap/ux-specification": "^1.102.21",
    "sqlite3": "^5"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-BookstoreApp.bookstoreApp": "cds watch --open BookstoreApp.bookstoreApp/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "cds": {
    "requires": {
      "[production]": {
        "db": {
          "kind": "hana-cloud"
        }
      },
      "db": {
        "kind": "sql"
      },
      "app-service": {
        "impl": "@sap/low-code-event-handler"
      },
      "auth": {
        "kind": "xsuaa"
      }
    },
    "features": {
      "fetch_csrf": true
    }
  },
  "lcap": true,
  "sapux": [
    "app/BookstoreApp.bookstoreApp"
  ]
}
